
form#newServiceForm
  .modal-content
    .modal-header
      button.close(type='button' data-dismiss='modal' aria-label='Close')
        span(aria-hidden='true') &times;
      h4.modal-title Add Service
    .modal-body              
        .form-group
          label(for='name') Name
          input#name.form-control(type='text' name='name' placeholder='Name' required)
        .form-group
          label(for='price') Price
          input#price.form-control(type='number' name='price' placeholder='Price' required)
        .form-group
          label(for='type') Type
          select#type.form-control(name='type' placeholder='Type')
            option(value='Per-person') Per-person
            option(value='Per-room') Per-room
    .modal-footer
      .div#errorMessage
      button.btn.btn-default(type='button' data-dismiss='modal') Cancel
      button#saveBtn.btn.btn-primary(type='submit') Save

script.
  $('#newServiceForm').submit((e)=>{
    e.preventDefault();
    // Send Post request with new service
    $.ajax({
      url: "/api/services",
      method: 'POST',
      data: {
        "name": $('#name').val(),
        "price": $('#price').val(),
        "type": $('#type').val()
      },      
      success: data=>{
        $('#serviceModal').modal('toggle');
        $('#serviceList').html(data);
      },
      error: ()=>{
        $('#errorMessage').html('<p class="text-danger">Unable to save. Please make sure all fields are filled in correctly.</p>');
      }
    });
  });