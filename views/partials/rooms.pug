div
  table.table.table-hover
    thead
      tr.table-danger
        th(scope='col') Room
        th(scope='col') Type
        th(scope='col') Price 
        th.text-right(scope='col') Operations               
    tbody
      each room in rooms
        tr(id='row'+room._id)
          td #{room.name}
          td #{room.type}
          td #{room.price}
          td.text-right
            a.btn.btn-warning(onclick='editRoomFunction("'+room._id+'")' type='button' data-toggle='modal' data-target='#roomModal')
              i.fa.fa-pencil.fa-fw
              |  Edit
            a.btn.btn-danger(onclick='deleteRoomFunction("'+room._id+'")' type='button')
              i.fa.fa-times.fa-fw
              |  Delete       
